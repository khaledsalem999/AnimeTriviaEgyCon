<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_status"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#4A142E"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.khaled.animetriviaegycon.StatusActivity"
    tools:showIn="@layout/activity_status">

    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/textView2">

        <TableLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TableRow
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/Hscorerow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:textColor="#FFFFFF"
                    android:text="Highest Score"
                    android:textSize="20dp"
                    android:layout_width="fill_parent"
                    android:id="@+id/HighScoreLable"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button"
                    android:layout_height="fill_parent" />
            </TableRow>

            <TableRow
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/Fanime"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TextView
                    android:textColor="#FFFFFF"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text=""
                    android:textSize="20dp"
                    android:id="@+id/favanime"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button" />
            </TableRow>

            <TableRow
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/Ranswers"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TextView
                    android:textColor="#FFFFFF"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Right Answers"
                    android:textSize="20dp"
                    android:id="@+id/rightanslable"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button" />
            </TableRow>

            <TableRow
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/RankingRow"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TextView
                    android:textColor="#FFFFFF"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text=""
                    android:textSize="20dp"
                    android:id="@+id/leaderboardlable"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button" />
            </TableRow>
        </TableLayout>
    </FrameLayout>

    <TableLayout
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/textView2"
        android:layout_alignParentRight="true">

        <TableRow
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:textColor="#FFFFFF"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text=""
                android:textSize="20dp"
                android:id="@+id/personalscore"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />
        </TableRow>

        <TableRow
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:textColor="#FFFFFF"
                android:text=""
                android:textSize="20dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/favanimename"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />
        </TableRow>

        <TableRow
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:textColor="#FFFFFF"
                android:text=""
                android:textSize="20dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/rightans"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />
        </TableRow>

        <TableRow
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:textColor="#FFFFFF"
                android:text=""
                android:textSize="20dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/worldplace"
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />
        </TableRow>
    </TableLayout>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:clickable="false"
        android:isIndicator="true" />

    <TextView
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_above="@+id/ratingBar"
        android:id="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:text="YOUR RATING" />

</RelativeLayout>
